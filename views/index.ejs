<% include partials/header.ejs %>
<div class="container">
  <div class="welcome">
    <div class="heading">
      <h1 id="heading">ChatX</h1>
    </div>
    <div class="login">
      <form class="form" action="/chat" method="POST">
        <div class="username-container">
          <label for="username" class="usn">Username</label>
          <input type="text" name="username" placeholder="Enter your username..." class="username" autofocus required>
        </div>

        <div class="room-container">
          <label for="room" class="rm">Room name</label>
          <input type="text" name="room" placeholder="Enter name of your room..." class="room" required>
        </div>

        <button class="btn">
          Let me in!
        </button>

        <div class="private">
          <p><a class="private-link" href="/private">Click here create a private room </a>😉</p>
        </div>
      </form>
    </div>
  </div>
</div>
<footer>
  <p>Made with ❤ by Xemicolon</p>
</footer>
<script src="/javascripts/index.js"></script>
